<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:background="#f9f9f9"
    android:orientation="vertical"
    android:padding="5dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:padding="10dp"
        android:text="수량을 입력해주세요."
        android:textSize="20dp" />

    <NumberPicker
        android:id="@+id/dialog_number_picker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:scaleX="1.5"
        android:scaleY="1.5"
        android:visibility="gone" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="right"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/border_green"
            android:gravity="right">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:orientation="horizontal"
                android:padding="10dp">

                <EditText
                    android:id="@+id/dialog_keypad_input"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:background="#FFF"
                    android:gravity="right" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|bottom"
                    android:gravity="right"
                    android:text="kg"
                    android:visibility="gone" />
            </LinearLayout>
        </LinearLayout>

        <TableLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:padding="1dp"
            android:background="#e0e0e0">


            <TableRow>

                <Button
                    android:id="@+id/dialog_keypad_1"
                    android:layout_width="90dp"
                    android:layout_height="70dp"
                    android:background="#FFF"
                    android:text="1"

                    android:textSize="20dp" />

                <LinearLayout
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="#e0e0e0" />

                <Button
                    android:id="@+id/dialog_keypad_2"
                    android:layout_width="90dp"
                    android:layout_height="70dp"
                    android:background="#FFF"
                    android:text="2"

                    android:textSize="20dp" />

                <LinearLayout
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="#e0e0e0" />

                <Button
                    android:id="@+id/dialog_keypad_3"
                    android:layout_width="90dp"
                    android:layout_height="70dp"
                    android:background="#FFF"
                    android:text="3"

                    android:textSize="20dp" />
            </TableRow>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#e0e0e0" />

            <TableRow>

                <Button
                    android:id="@+id/dialog_keypad_4"
                    android:layout_width="90dp"
                    android:layout_height="70dp"
                    android:background="#FFF"
                    android:text="4"

                    android:textSize="20dp" />

                <LinearLayout
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="#e0e0e0" />

                <Button
                    android:id="@+id/dialog_keypad_5"
                    android:layout_width="90dp"
                    android:layout_height="70dp"
                    android:background="#FFF"
                    android:text="5"

                    android:textSize="20dp" />

                <LinearLayout
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="#e0e0e0" />

                <Button
                    android:id="@+id/dialog_keypad_6"
                    android:layout_width="90dp"
                    android:layout_height="70dp"
                    android:background="#FFF"
                    android:text="6"

                    android:textSize="20dp" />
            </TableRow>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#e0e0e0" />

            <TableRow>

                <Button
                    android:id="@+id/dialog_keypad_7"
                    android:layout_width="90dp"
                    android:layout_height="70dp"
                    android:background="#FFF"
                    android:text="7"

                    android:textSize="20dp" />

                <LinearLayout
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="#e0e0e0" />

                <Button
                    android:id="@+id/dialog_keypad_8"
                    android:layout_width="90dp"
                    android:layout_height="70dp"
                    android:background="#FFF"
                    android:text="8"

                    android:textSize="20dp" />

                <LinearLayout
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="#e0e0e0" />

                <Button
                    android:id="@+id/dialog_keypad_9"
                    android:layout_width="90dp"
                    android:layout_height="70dp"
                    android:background="#FFF"
                    android:text="9"

                    android:textSize="20dp" />
            </TableRow>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#e0e0e0" />

            <TableRow>

                <Button
                    android:id="@+id/dialog_keypad_0"
                    android:layout_width="90dp"
                    android:layout_height="70dp"
                    android:background="#FFF"
                    android:text="0"

                    android:textSize="20dp" />

                <LinearLayout
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="#e0e0e0" />

                <Button
                    android:id="@+id/dialog_keypad_del"
                    android:layout_width="90dp"
                    android:layout_height="70dp"
                    android:paddingTop="4dp"
                    android:background="#F6F6F6"
                    android:text="지움"
                    android:textColor="#003B64"
                    android:textSize="15dp" />

                <LinearLayout
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="#e0e0e0" />

                <Button
                    android:id="@+id/dialog_keypad_reset"
                    android:layout_width="90dp"
                    android:layout_height="70dp"
                    android:paddingTop="4dp"
                    android:background="#F6F6F6"
                    android:text="초기화"
                    android:textColor="#D60000"
                    android:textSize="15dp" />
            </TableRow>
        </TableLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <Button
            android:id="@+id/dialog_number_picker_ok"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:layout_marginRight="10dp"
            android:background="#0bd438"
            android:text="확인"
            android:textSize="20dp"
            android:textColor="#FFF" />

        <Button
            android:id="@+id/dialog_number_picker_close"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:background="@drawable/border_green"
            android:text="닫기"
            android:textSize="20dp"
            android:textColor="#0bd438" />

    </LinearLayout>
</LinearLayout>